@model Library_Project_Management.Models.Borrowing_Record

<h1>Delete Borrowing Record</h1>

<h3>Are you sure you want to delete this record?</h3>
<div>
    <h4>Borrowing Record Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Book:</dt>
        <dd class="col-sm-10">@Model.Book?.Title</dd>

        <dt class="col-sm-2">Member:</dt>
        <dd class="col-sm-10">@Model.Member?.FullName</dd>

        <dt class="col-sm-2">Status:</dt>
        <dd class="col-sm-10">
            @if (Model.Returned)
            {
                <span>Returned</span>
            }
            else
            {
                <span class="text-danger">Not Returned</span>
            }
        </dd>
    </dl>

    @if (!Model.Returned)
    {
        <div class="alert alert-warning">
            <strong>Warning!</strong> This book has not been returned yet. Deleting this record will mark the book as available.
        </div>
    }

    <form asp-action="Delete">
        <input type="hidden" asp-for="RecordId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>